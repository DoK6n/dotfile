# Aliases

alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias ll="exa -l --icons --ignore-glob=node_modules"
alias lltt="exa -l --icons --tree --level=2 --ignore-glob=node_modules"
alias llttt="exa -l --icons --tree --level=3 --ignore-glob=node_modules"

alias vim="lvim"
alias nvim="lvim"
alias pro="cd ~/projects"

alias reload='source ~/.zshrc'
